{
    "manifest_version": 2,
    "name": "12ft.io",
    "version": "1.0",
  
    "description": "Add a button to the menu to open links on the 12ft.io proxy.",
  
    "icons": {
        "16": "icons/icon.svg",
        "32": "icons/icon.svg",
        "48": "icons/icon.svg",
        "96": "icons/icon.svg"
    },
  
    "content_scripts": [
        {
          "matches": ["*://*.mozilla.org/*"],
          "js": ["12ft.js"]
        }
      ],

    "permissions": [
        "<all_urls>",
        "contextMenus"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false,
        "type": "module"
    }
  }
  